
-- Sniper Arena - Mobile Optimized
local lp = game:GetService("Players").LocalPlayer
local uis = game:GetService("UserInputService")
local cam = workspace.CurrentCamera
local rs = game:GetService("RunService")

local screen = {w = 828, h = 1792}
local settings = {
    aim = {enabled = false, strength = 0.8, fov = 150, fovVis = true, fovCol = Color3.new(1,0,0), quick = false, wall = true, death = true},
    esp = {enabled = false, box = true, name = true, dist = true, health = true, col = Color3.new(1,1,1), tracer = false, tracerCol = Color3.new(0,1,0), tracerPos = "Bottom"},
    skin = {enabled = false, selected = "Default"},
    alert = {enabled = true, dur = 2}
}

local function worldToScreen(p) local v,o = cam:WorldToScreenPoint(p) return Vector2.new(v.X,v.Y),o end
local function alive(c) return c and c:FindFirstChild("Humanoid") and c.Humanoid.Health > 0 and c:FindFirstChild("HumanoidRootPart") end
local function canSee(t,e)
    local o = t.Character and (t.Character:FindFirstChild("Head") or t.Character:FindFirstChild("HumanoidRootPart"))
    local target = e.Character and (e.Character:FindFirstChild("Head") or e.Character:FindFirstChild("HumanoidRootPart"))
    if not o or not target then return false end
    local ray = workspace:Raycast(o.Position, (target.Position - o.Position).Unit * 1000, RaycastParams.new())
    return not ray or ray.Instance:IsDescendantOf(e.Character)
end

local function getTarget(center,rad)
    local closest,dist = nil,rad
    for _,p in ipairs(game:GetService("Players"):GetPlayers()) do
        if p ~= lp and alive(p.Character) then
            local pos,on = worldToScreen(p.Character.HumanoidRootPart.Position)
            if on then
                local d = (Vector2.new(pos.X,pos.Y)-center).Magnitude
                if d < dist and (not settings.aim.wall or canSee(lp,p)) then dist,closest = d,p end
            end
        end
    end
    return closest
end

-- Simple UI Table
