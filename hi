local function drawFOV()
    if not settings.fovShow then if fovCircle then fovCircle.Visible = false end return end
    local c = Vector2.new(screen.WIDTH/2,screen.HEIGHT/2)
    if not fovCircle then fovCircle = d:circle({pos=c,rad=settings.fovSize,col=settings.fovColor,thk=2})
    else fovCircle.Position,fovCircle.Radius,fovCircle.Color,fovCircle.Visible = c,settings.fovSize,settings.fovColor,true end
end

