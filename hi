gui.Name, gui.ResetOnSpawn, gui.Parent = "SniperArena", false, game:GetService("CoreGui")

local btn = Instance.new("TextButton")
btn.Size, btn.Position = UDim2.new(0,50,0,50), UDim2.new(1,-60,0,85)
btn.BackgroundColor3, btn.BackgroundTransparency = Color3.fromRGB(202,243,255), 0.2
