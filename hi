-- Sniper Arena - Mobile Optimized (No UI Library)
local screen = {WIDTH = 828, HEIGHT = 1792}
local lp = game:GetService("Players").LocalPlayer
local uis = game:GetService("UserInputService")
local cam = workspace.CurrentCamera
local run = game:GetService("RunService")

-- State
local settings = {
    aimbot = false, strength = 0.8, fovSize = 150, fovColor = Color3.new(1,0,0), fovShow = true,
    quickScope = false, wallCheck = true, deathCheck = true,
    esp = false, boxes = true, names = true, distance = true, health = true,
    tracers = false, tracerColor = Color3.new(0,1,0), tracerPos = "Bottom",
    lookAlerts = true, alertDur = 2,
    skins = false, skin = "Default"
}

-- Menu state
local menu = {open = false, selected = 1, pages = {"AIMBOT","ESP","SKINS","ALERTS"}}

-- Button
local btn = Instance.new("TextButton")
btn.Size, btn.Position = UDim2.new(0,50,0,50), UDim2.new(1,-60,0,85)
btn.BackgroundColor3, btn.Text = Color3.fromRGB(202,243,255), ""
btn.Parent = game:GetService("CoreGui")
Instance.new("ImageLabel", btn).Image = "rbxassetid://77218680285262"

btn.MouseButton1Click:Connect(function() menu.open = not menu.open end)

-- Drawing
local d = {lines={},circles={},texts={},squares={}}
function d:clear() for _,v in pairs(self) do for _,w in pairs(v) do w:Remove() end end self.lines,self.circles,self.texts,self.squares = {},{},{},{} end
function d:circle(p) local c = Drawing.new("Circle") c.Position,c.Radius,c.Color,c.Thickness = p.pos,p.rad,p.col,p.thk or 1 table.insert(self.circles,c) return c end
function d:line(p) local l = Drawing.new("Line") l.From,l.To,l.Color,l.Thickness = p.f,p.t,p.col,p.thk or 1 table.insert(self.lines,l) return l end
function d:text(p) local t = Drawing.new("Text") t.Text,t.Position,t.Color,t.Size,t.Center = p.txt,p.pos,p.col,p.sz or 16,p.ctr or false table.insert(self.texts,t) return t end
function d:square(p) local s = Drawing.new("Square") s.Position,s.Size,s.Color,s.Filled = p.pos,p.sz,p.col,p.fill or false table.insert(self.squares,s) return s end

-- Helpers
local function w2s(p) local v,o = cam:WorldToScreenPoint(p) return Vector2.new(v.X,v.Y),o end
local function alive(c) return c and c:FindFirstChild("Humanoid") and c.Humanoid.Health > 0 and c:FindFirstChild("HumanoidRootPart") end
local function visible(t)
    local p = lp.Character and (lp.Character:FindFirstChild("Head") or lp.Character.HumanoidRootPart)
    local e = t.Character and (t.Character:FindFirstChild("Head") or t.Character.HumanoidRootPart)
    if not p or not e then return false end
    local ray = workspace:Raycast(p.Position, (e.Position-p.Position).Unit*1000, RaycastParams.new())
    return not ray or ray.Instance:IsDescendantOf(t.Character)
end

local function getTarget()
    local closest,dist = nil,settings.fovSize
    local center = Vector2.new(screen.WIDTH/2,screen.HEIGHT/2)
    for _,p in ipairs(game:GetService("Players"):GetPlayers()) do
        if p ~= lp and alive(p.Character) then
            local pos,on = w2s(p.Character.HumanoidRootPart.Position)
            if on then
                local d = (Vector2.new(pos.X,pos.Y)-center).Magnitude
                if d < dist and (not settings.wallCheck or visible(p)) then
                    dist,closest = d,p
                end
            end
        end
    end
    return closest
end

